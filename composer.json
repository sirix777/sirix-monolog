{
  "name": "sirix/monolog",
  "description": "Monolog PSR-11 Factories for Mezzio",
  "license": "BSD-2-Clause",
  "type": "library",
  "require": {
    "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
    "ext-json": "*",
    "monolog/monolog": "^3.0",
    "psr/container": "^1.0 || ^2.0",
    "psr/log": "^2.0 || ^3.0"
  },
  "require-dev": {
    "ext-amqp": "*",
    "aws/aws-sdk-php": "^3.185",
    "bamarni/composer-bin-plugin": "^1.8",
    "doctrine/couchdb": "^1.0.0-beta4",
    "graylog2/gelf-php": "^2.0.0-beta.1",
    "mongodb/mongodb": "^2.1.1",
    "php-amqplib/php-amqplib": "^3.0",
    "phpunit/phpunit": "^12.0",
    "predis/predis": "^2.0",
    "ruflin/elastica": "^7.2",
    "sirix/redaction": "^1.1",
    "swiftmailer/swiftmailer": "^6.2"
  },
  "suggest": {
    "sirix/redaction": "Required to use RedactorProcessor for sensitive data redaction"
  },
  "autoload": {
    "psr-4": {
      "Sirix\\Monolog\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sirix\\Test\\Monolog\\": "test/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "bump-after-update": true,
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true,
      "target-directory": "tools"
    }
  },
  "scripts": {
    "analyse-deps": "tools/composer-dependency-analyser/vendor/bin/composer-dependency-analyser",
    "check": [
      "@cs-check",
      "@rector",
      "@phpstan",
      "@test"
    ],
    "cs-check": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv --dry-run --diff",
    "cs-fix": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv",
    "normalize": "@composer bin composer-normalize normalize --diff ../../composer.json",
    "phpstan": "php tools/phpstan/vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=1G",
    "rector": "php tools/rector/vendor/bin/rector process --dry-run --xdebug --memory-limit=1G",
    "test": "phpunit --testdox --colors=always"
  }
}
